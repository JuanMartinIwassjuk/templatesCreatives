<!DOCTYPE html PUBLIC "-//W3C//DTD XHTML 1.0 Strict//EN" "http://www.w3.org/TR/xhtml1/DTD/xhtml1-strict.dtd">
<html>

<head>
    <meta http-equiv="Content-Type" content="text/html; charset=utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Apple</title>
    <style>
        body,
        table,
        thead,
        tbody,
        tr,
        td,
        img {
            padding: 0;
            margin: 0;
            border: none;
            border-spacing: 0px;
            border-collapse: collapse;
            vertical-align: top;
        }

        .wrapper {
            padding-left: 10px;
            padding-right: 10px;
        }

        h1,
        h2,
        h3,
        h4,
        h5,
        h6,
        p,
        a {
            margin: 0;
            padding: 0;
            padding-bottom: 10px;
            line-height: 1.2;
            font-family: Verdana, "Arial", sans-serif;
            color: #17191c;
        }

        .logo {
            width: 230px;
            margin-bottom: 20px;
            margin-top: 40px;
        }

        .intro {
            font-size: 24px;
            color: white;
            max-width: 75%;
            margin-bottom: 10px;
            margin-top: 10px;
        }

        .feature-img {
            width: 375px;
            max-width: 80%;
        }

        .feature-para {
            font-size: 20px;
            margin-top: 20px;
            max-width: 90%;
            color: white;
        }

        .feature-para-2 {
            font-size: 17px;
            max-width: 60%;
            color: white;
        }

        .cta {
            background-color: red;
            padding: 16px 40px;
            text-decoration: none;
            color: #fff;
            font-size: 24px;
            border-radius: 50px;
            display: inline-block;
            margin-top: 20px;
            margin-bottom: 10px;
        }

        .desc {
            font-size: 11px;
            max-width: 95%;
            margin-bottom: 20px;
            color: white;
        }

        @media only screen and (max-width: 480px) {
            .wrapper .section {
                width: 100%;
            }
            .wrapper .column {
                width: 100%;
                display: block;
            }
            .intro {
                font-size: 26px;
                max-width: 80%;
            }
            .feature-para {
                font-size: 18px;
            }
            .feature-para-2 {
                font-size: 15px;
                max-width: 80%;
            }
            .desc {
                max-width: 85%;
            }
        }
    </style>
</head>

<body style="background-color: {{secondaryColor}};padding-top:30px;">
    <table width="100%">
        <tbody>
            <tr>
                <td class="wrapper" width="550" align="center">
                    <table width="550" class="section header" bgcolor="{{mainColor}}" align="center" style="border-top: 1px solid #f0f0f0;">
                        <tbody>
                            <tr>
                                <td align="center"> <img border="0" src="{{title_img}}" alt="" class="logo">
                                    <div class="card">
                                        <script>
                                            var timeInSecs;
                                            var ticker;

                                            function startTimer(secs) {
                                                timeInSecs = parseInt(secs);
                                                ticker = setInterval("tick()", 1000);
                                            }

                                            function tick() {
                                                var secs = timeInSecs;
                                                if (secs > 0) {
                                                    timeInSecs--;
                                                } else {
                                                    clearInterval(ticker);
                                                    startTimer(5 * 60); // 4 minutes in seconds
                                                }

                                                var days = Math.floor(secs / 86400);
                                                secs %= 86400;
                                                var hours = Math.floor(secs / 3600);
                                                secs %= 3600;
                                                var mins = Math.floor(secs / 60);
                                                secs %= 60;
                                                var pretty = ((mins < 10) ? "0" : "") + mins + ":" + ((secs < 10) ? "0" : "") + secs;

                                                document.getElementById("countdown").innerHTML = pretty;
                                            }

                                            startTimer(5 * 60); // 4 minutes in seconds

                                            //Credits to Philip M from codingforum
                                        </script>
                                        <span style="font-size:1em; font-weight:500;"><p style="color=#ffffff;">{{intro}}</p></span> <span id="countdown" style="font-weight: bold; color:red;"></span>
                                        <p class="intro">{{intro_2}}</p> <img border="0" src={{product_img}} class="feature-img">

                                        <p class="feature-para">{{text_1}} <br>{{text_2}} </p>
                                        <p class="feature-para-2">{{text_3}}</p> <a href="" style="background-color: {{color_buttom}};" class="cta">{{text_buttom}}</a>
                                        <br>
                                        <br>
                                        <p class="desc">{{text_warning_1}}<br> <strong>{{text_warning_2}}</strong>
                                        </p>
                                </td>
                            </tr>
                        </tbody>
                    </table>
                </td>
            </tr>
            <tr>
                <td align="center">
                    <br>
                    <a href="" style="color:#666;text-decoration:none;">Unsubscribe</a></p>
                </td>
            </tr>
        </tbody>
    </table>
</body>

</html>