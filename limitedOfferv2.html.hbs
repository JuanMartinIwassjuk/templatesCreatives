<!DOCTYPE html PUBLIC "-//W3C//DTD XHTML 1.0 Strict//EN" "http://www.w3.org/TR/xhtml1/DTD/xhtml1-strict.dtd">
<html>

<head>
    <meta http-equiv="Content-Type" content="text/html; charset=utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <style>
        body,
        table,
        thead,
        tbody,
        tr,
        td,
        img {
            padding: 0;
            margin: 0;
            border: none;
            border-spacing: 0px;
            border-collapse: collapse;
            vertical-align: top;
        }

        .wrapper {
            padding-left: 10px;
            padding-right: 10px;
        }

        h1,
        h2,
        h3,
        h4,
        h5,
        h6,
        p,
        a {
            margin: 0;
            padding: 0;
            padding-bottom: 10px;
            line-height: 1.2;
            font-family: Verdana, "Arial", sans-serif;
            color: #17191c;
        }

        .logo {
            width: 190px;
            margin-bottom: 20px;
            margin-top: 40px;
        }

        .intro {
            font-size: 25px;
            color: #1d1d1d;
            max-width: 75%;
            margin-bottom: 10px;
            margin-top: 10px;
        }

        .feature-img {
            width: 455px;
            max-width: 80%;
        }

        .feature-para {
            font-size: 20px;
            margin-top: 20px;
            max-width: 90%;
        }

        .feature-para-2 {
            font-size: 17px;
            max-width: 80%;
        }

        .cta {
            background-color: blue;
            padding: 16px 40px;
            text-decoration: none;
            color: #fff;
            font-size: 24px;
            border-radius: 50px;
            display: inline-block;
            margin-top: 20px;
            margin-bottom: 10px;
        }

        .desc {
            font-size: 11px;
            max-width: 95%;
            margin-bottom: 20px;
            color: ;
        }

        @media only screen and (max-width: 480px) {
            .wrapper .section {
                width: 100%;
            }
            .wrapper .column {
                width: 100%;
                display: block;
            }
            .intro {
                font-size: 26px;
                max-width: 80%;
            }
            .feature-para {
                font-size: 18px;
            }
            .feature-para-2 {
                font-size: 15px;
                max-width: 80%;
            }
            .desc {
                max-width: 85%;
            }
        }
    </style>
</head>

<body style="background-color: {{backgroundcolor}};padding-top:30px;">
    <table width="100%">
        <tbody>
            <tr>
                <td class="wrapper" width="550" align="center">
                    <table width="550" class="section header" bgcolor="{{mainColor}}" align="center" style="border-top: 1px solid #f0f0f0;">
                        <tbody>
                            <tr>
                                <td align="center"> <img border="0" src="{{logo_img}}" alt="" class="logo">
                                    <p class="intro" style="color:{{color_text}}">{{intro}}</p> <img border="0" src="{{product_img}}" class="feature-img">

                                    <p class="feature-para" style="color:{{color_text}};">{{text_1}} <br>{{text_2}} </p>
                                    <p class="feature-para-2" style="color:{{color_text_button}}; background-color: {{button_color}};">{{text_3}}</p> <a href="" class="cta">Answer Now</a>
                                    <br>
                                    <br>
                                   


                                    </p>
                                </td>
                            </tr>
                        </tbody>
                    </table>
                </td>
            </tr>
            <tr>
                <td align="center">
                    <br>
                    <p style="font-size: 11px; color: #797979; max-width: 550px; line-height: 1.4;">
                        {{unsuscribe_text}} <a href="" style="color:#666;text-decoration:none;">{{click_text}}</a></p>
                </td>
            </tr>
        </tbody>
    </table>
</body>

</html>